<UserControl x:Class="SurfaceApp.Card"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:s="http://schemas.microsoft.com/surface/2008"
             xmlns:sa="clr-namespace:SurfaceApp">
    <Grid>

        <s:ScatterView>

            <s:ScatterViewItem
                Name="card"
                Height="125"
                Width="80"
                CanMove="True"
                CanRotate="False"
                CanScale="False"
                Center="280,80"
                UseLayoutRounding="False"
                ScatterManipulationStarted="card_ScatterManipulationStarted"
                ScatterManipulationDelta="Card1_ScatterManipulationDelta"
                ScatterManipulationCompleted="card_ScatterManipulationCompleted" 
                BorderThickness="8" Opacity="0.8">
            </s:ScatterViewItem>

        </s:ScatterView>

    </Grid>
           
</UserControl>
