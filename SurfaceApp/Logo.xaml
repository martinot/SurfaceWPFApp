<UserControl x:Class="SurfaceApp.Logo"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:s="http://schemas.microsoft.com/surface/2008">
    <Rectangle 
        Name="logo" 
        Height="240" 
        Width="250" 
        RadiusX="125" 
        RadiusY="125"
        TextBlock.TextAlignment="Center" 
        Opacity="1" 
        Stretch="Fill" 
        Margin="0" OpacityMask="#FAFFFFFD" StrokeThickness="4" Stroke="White">
        <Rectangle.Fill>
            <ImageBrush ImageSource="/SurfaceApp;component/Images/capgeminiFelo.png" Stretch="Fill" TileMode="None" />
        </Rectangle.Fill>
        <Rectangle.RenderTransform>
            <TranslateTransform X="0.0" Y="0.0"/>
        </Rectangle.RenderTransform>
    </Rectangle>
</UserControl>
